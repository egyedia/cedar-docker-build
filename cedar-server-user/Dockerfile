FROM metadatacenter/cedar-microservice:2.6.26-SNAPSHOT

ENV CEDAR_SERVER_NAME=user

ENV CEDAR_USER_HTTP_PORT=9005
ENV CEDAR_USER_ADMIN_PORT=9105
ENV CEDAR_USER_STOP_PORT=9205

ENV LOGDIR=${CEDAR_HOME}/log/cedar-${CEDAR_SERVER_NAME}-server/
RUN mkdir -p ${LOGDIR}
VOLUME ${LOGDIR}

ADD scripts/pre-docker-entrypoint.sh ${CEDAR_HOME}/

EXPOSE ${CEDAR_USER_HTTP_PORT} ${CEDAR_USER_ADMIN_PORT} ${CEDAR_USER_STOP_PORT}

RUN ${CEDAR_HOME}/install_deps.sh
